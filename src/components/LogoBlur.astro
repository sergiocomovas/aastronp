---
const velocidad = Astro.props.velocidad ?? 1; 
let animacion_st= `animation: pulse ${velocidad}s cubic-bezier(0,0,0,.5) infinite;`
const titulo = Astro.props.titulo;
const subtitulo = Astro.props.subtitulo; 
---
<section style="margin-top: -10rem;">

  <r-grid  columns="8" columns-s="5"> 

    {titulo && 
      <r-cell style="display: flex; align-items:flex-end" span="1-3">
        <aside>
          <h1>{titulo}</h1>
          <h4 style="color: var(--color-bg-secondary)">{subtitulo}</h4>
        </aside>
      </r-cell>
    }<!-- CIERRE OK -->
    
    <r-cell span="5..">
      <figure>
        <section style={animacion_st} class="img-bg" ></section>
        <img id="letras" src="/img/comovaslogo_solotexto_cuadrado.svg" alt="comovas-logo">
      </figure>
    </r-cell>

  </r-grid> 

</section>


<style>

  section aside {
      border: none !important;
      border-radius: 0px !important;
      box-shadow: none !important; 
      padding: 1.25rem !important;
      width: 20rem !importan;
  }

  figure{
      display: block;
      margin-left: auto;
      margin-right: auto 
  }

  figure img, 
  .img-bg {
    height: 20rem;
    width: 20rem;
  }

  .img-bg {
    position:absolute;
    background-image: linear-gradient( 160deg, #47caff 50%, #360055 50% );
    z-index: -1;
    border-radius: 50%;
    filter:blur(75px);
    /* animation: pulse 15s cubic-bezier(0,0,0,.5) infinite; */

  }

  @keyframes pulse{
    50% {
      transform: scale(1.5);
    }
  }

</style>

